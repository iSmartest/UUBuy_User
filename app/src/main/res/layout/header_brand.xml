<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/app_main_background">
    <ImageView
        android:id="@+id/iv_activities_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loading_error"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/translucent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_brand_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_main_color"
            android:textSize="17dp"
            android:layout_weight="1"
            android:paddingLeft="14dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_brand_coupon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="我要领券"
        android:textColor="@color/app_main_default"
        android:textSize="11dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_i_want_coupon_background"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"/>
</RelativeLayout>