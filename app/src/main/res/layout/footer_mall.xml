<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_default"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_16"
        android:showDividers="beginning|end"
        app:layout_scrollFlags="scroll">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:padding="@dimen/space_30"
            android:text="附近周边"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_size_40px" />

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:id="@+id/ll_item_nearby_mall_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_default"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_30"
            android:paddingTop="@dimen/space_16"
            android:paddingRight="@dimen/space_30"
            android:paddingBottom="@dimen/space_16">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/space_280"
                android:layout_height="@dimen/space_180"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/iv_nearby_mall_icon_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_launcher" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_180"
                android:layout_marginLeft="@dimen/space_16"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nearby_mall_name_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="友谊燕莎"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/space_30" />

                <TextView
                    android:id="@+id/tv_nearby_mall_address_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:text="朝阳区亮马桥52号"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="@dimen/space_26" />

                <TextView
                    android:id="@+id/tv_nearby_mall_distance_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:text="距我3km"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="@dimen/space_26" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:id="@+id/ll_item_nearby_mall_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_default"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_30"
            android:paddingTop="@dimen/space_16"
            android:paddingRight="@dimen/space_30"
            android:paddingBottom="@dimen/space_16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_180"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nearby_mall_name_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="友谊燕莎"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/space_30" />

                <TextView
                    android:id="@+id/tv_nearby_mall_address_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:text="朝阳区亮马桥52号"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="@dimen/space_26" />

                <TextView
                    android:id="@+id/tv_nearby_mall_distance_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:text="距我3km"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="@dimen/space_26" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/space_280"
                android:layout_height="@dimen/space_180"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/iv_nearby_mall_icon_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_launcher" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>