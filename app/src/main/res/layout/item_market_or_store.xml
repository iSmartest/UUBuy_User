<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ifree.uu.uubuy.custom.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:round_corner="6dp"
        app:stroke_color="@color/stroke_color"
        app:stroke_width="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp">
        <LinearLayout
            android:id="@+id/ll_item_city_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/app_main_default">
            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_content_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_subtitle_color"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </com.ifree.uu.uubuy.custom.RCRelativeLayout>
</LinearLayout>