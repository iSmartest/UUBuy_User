<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_activities_circle_store_icon"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loading_error"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_activities_circle_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:maxLines="2"
            android:layout_weight="1"
            android:gravity="top|left"
            android:ellipsize="end"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_activities_circle_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_subtitle_color"
            android:textSize="12dp"
            android:maxLines="2"
            android:gravity="bottom|left"
            android:layout_weight="1"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>