<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/app_main_default">
        <ImageView
            android:id="@+id/iv_activities_circle_store_icon"
            android:layout_width="90dp"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_error"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_activities_circle_store_icon"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_activities_circle_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/tv_activities_circle_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:textSize="11dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>