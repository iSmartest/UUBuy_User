<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_30"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:textStyle="bold"
            android:text="友谊燕莎"
            android:textSize="@dimen/font_size_36px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/text_subtitle_color"
            android:text="活动时间：2019.01.07-2019.01.30"
            android:layout_marginTop="@dimen/space_10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/text_main_color"
            android:text="已报名人数：234"
            android:layout_marginTop="@dimen/space_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_30">
            <TextView
                android:layout_width="@dimen/space_200"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_sign_up_state_background"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_28px"
                android:text="取消报名"
                android:gravity="center"/>
            <TextView
                android:layout_width="@dimen/space_200"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_sign_up_state_background"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_28px"
                android:text="查看活动"
                android:gravity="center"
                android:layout_marginLeft="@dimen/space_100"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>