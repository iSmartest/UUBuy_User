<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/app_main_background">

    <LinearLayout
        android:id="@+id/rl_foot_print_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@color/app_main_default"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_foot_print_commodity_picture"
                android:layout_width="120dp"
                android:layout_height="88dp"
                android:src="@drawable/loading_error"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/tv_foot_print_commodity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main_color"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/tv_foot_print_commodity_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_foot_print_commodity_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_price_color"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_foot_print_commodity_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_main_color"
                        android:textSize="14dp"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动件数"
                        android:textColor="@color/title_color"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/tv_foot_print_commodity_surplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_price_color"
                        android:textSize="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_foot_print_commodity_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_foot_print_is_over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:textColor="@color/app_main_default"
        android:text="商品已下架"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/translucent"/>
</RelativeLayout>