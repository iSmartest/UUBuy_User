<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/ll_store_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_store_product_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_300"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_activities"
            android:background="@color/app_main_default"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/space_16">

            <TextView
                android:id="@+id/tv_store_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="迪丽热巴"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_26px" />

            <TextView
                android:id="@+id/tv_store_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="￥:102300"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_26px" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>