<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_order_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/my_order_info_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_default"
        android:orientation="vertical"
        android:padding="@dimen/space_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_30"
            android:background="@drawable/shape_red_surplus_background"
            android:orientation="vertical"
            android:padding="@dimen/space_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="木子李"
                android:textColor="@color/app_main_default"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:text="18337125295"
                android:textColor="@color/app_main_default"
                android:textSize="@dimen/font_size_32px" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_commodity_icon"
                android:layout_width="@dimen/space_200"
                android:layout_height="@dimen/space_200"
                android:layout_marginEnd="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@drawable/image_item_stype"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_commodity_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/text_main_color"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_commodity_num"
                    android:layout_width="@dimen/space_200"
                    android:layout_height="@dimen/space_40"
                    android:layout_marginTop="@dimen/space_20"
                    android:text=""
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/font_size_26px" />

                <TextView
                    android:id="@+id/tv_order_commodity_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:text=""
                    android:textColor="@color/text_fraction_red"
                    android:textSize="@dimen/font_size_32px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_30"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/app_main_default">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_32px"
            android:textColor="@color/text_main_color"
            android:text="订单编号：SP201811120121453"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_32px"
            android:textColor="@color/text_main_color"
            android:layout_marginTop="@dimen/space_30"
            android:text="下单时间：2018.11.18  12:22:31"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_32px"
            android:textColor="@color/text_main_color"
            android:layout_marginTop="@dimen/space_30"
            android:text="商品总额：￥2312"/>
    </LinearLayout>
</LinearLayout>