<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/image_item_conner_style"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_market_or_store_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_main_color"
            android:textSize="17dp"
            android:paddingLeft="14dp"/>

        <include layout="@layout/v_horizontal_line"/>

        <ImageView
            android:id="@+id/iv_activities_picture"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/loading_error"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_activities_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/text_main_color"
            android:textSize="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"/>

    </LinearLayout>

</LinearLayout>