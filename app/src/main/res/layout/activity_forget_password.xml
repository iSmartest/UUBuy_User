<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_default">

    <include layout="@layout/activity_base"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@mipmap/uu_logo"/>
    <EditText
        android:id="@+id/edit_forget_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="输入手机号"
        android:textColorHint="@color/text_sign_color"
        android:textColor="@color/text_main_color"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider_color"
        android:layout_marginTop="18dp"
        android:gravity="center">
        <EditText
            android:id="@+id/edit_forget_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="输入验证码"
            android:textColorHint="@color/text_sign_color"
            android:textColor="@color/text_main_color"
            android:textSize="13dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:background="#D8D8D8"/>
        <TextView
            android:id="@+id/tv_forget_code"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="发送验证码"
            android:textColor="@color/text_sign_color"
            android:textSize="13dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_forget_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="输入密码"
        android:textColorHint="@color/text_sign_color"
        android:textColor="@color/text_main_color"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:layout_marginTop="18dp"
        android:background="@color/divider_color"/>
    <EditText
        android:id="@+id/edit_forget_sure_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="确认密码"
        android:textColorHint="@color/text_sign_color"
        android:textColor="@color/text_main_color"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="18dp"
        android:background="@color/divider_color"/>
    <TextView
        android:id="@+id/tv_forget_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="@color/text_main_color"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="19dp"
        android:gravity="center"
        android:background="@drawable/shape_login_style"/>
</LinearLayout>