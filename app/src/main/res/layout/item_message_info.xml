<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/app_main_default"
        android:padding="@dimen/space_30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_36px"
                android:textColor="@color/color_black"
                android:text="服务通知" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/text_subtitle_color"
            android:text="12月07日  下午13:22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/text_main_color"
            android:text="尊敬的客户："
            android:layout_marginTop="@dimen/space_30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/text_main_color"
            android:text="感谢您的意见，很抱歉给您带来的不便，您反馈的意见正在解决，请等待"
            android:layout_marginTop="@dimen/space_30"/>
    </LinearLayout>

</LinearLayout>