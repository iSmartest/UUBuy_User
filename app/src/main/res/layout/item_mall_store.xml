<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/ll_item_mall_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_main_default">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_140">
            <ImageView
                android:id="@+id/iv_store_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bg_launcher"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/translucent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mall_store_browse_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_main_default"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/space_6"
                    android:paddingBottom="@dimen/space_6"
                    android:text="14.5万人浏览"/>
                <ImageView
                    android:id="@+id/iv_is_yes"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="match_parent"
                    android:src="@drawable/activity_identification"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">
            <TextView
                android:id="@+id/tv_mall_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_30px"
                android:singleLine="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="Tribeca翠贝卡"
                android:layout_marginTop="2dp"
               />
            <TextView
                android:id="@+id/tv_mall_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_24px"
                android:text="F2-234"
                android:gravity="center|right"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>