<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_item_city_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_200">

            <ImageView
                android:id="@+id/iv_city_ad_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/loading_error" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/translucent"
                android:orientation="horizontal"
                android:padding="@dimen/space_6">
                <TextView
                    android:id="@+id/tv_city_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="报名：334人"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_city_browsing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="浏览：3242人"
                    android:textColor="@color/text_subtitle_color"
                    android:textSize="12dp" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_activities"
            android:background="@color/app_main_default"
            android:orientation="vertical"
            android:padding="@dimen/space_10">
            <TextView
                android:id="@+id/tv_city_ad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/text_main_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_city_ad_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/text_subtitle_color"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>