<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">

    <LinearLayout
        android:id="@+id/ll_market_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_main_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奥特莱斯上地店"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_color"
                android:textSize="17dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_market_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="12dp"
                android:textColor="@color/text_green"
                android:drawableTop="@drawable/share"/>
        </LinearLayout>

        <include layout="@layout/v_horizontal_line"/>

        <ImageView
            android:id="@+id/tv_market_picture"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/timg"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_market_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动时间2018-08-01——2018-08-03"
            android:textColor="@color/text_green"
            android:textSize="11dp"
            android:gravity="center_vertical"
            android:padding="14dp"/>

    </LinearLayout>

</LinearLayout>