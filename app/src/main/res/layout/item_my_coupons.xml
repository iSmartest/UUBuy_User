<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_220">
    <LinearLayout
        android:id="@+id/ll_my_coupons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@mipmap/coupon_background">
        <LinearLayout
            android:layout_width="@dimen/space_300"
            android:layout_height="@dimen/space_200"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_my_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5"
                android:textColor="@color/app_main_default"
                android:textSize="@dimen/font_size_80px"/>
            <TextView
                android:id="@+id/tv_my_coupons_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折"
                android:layout_marginTop="@dimen/space_20"
                android:gravity="center|bottom"
                android:textColor="@color/app_main_default"
                android:textSize="@dimen/font_size_30px"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/space_20"
            android:paddingLeft="@dimen/space_20">
            <TextView
                android:id="@+id/tv_my_coupon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/coupon_in_red"
                android:textSize="@dimen/font_size_30px"
                android:text="友谊燕莎"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_my_coupon_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/font_size_36px"
                android:text="满199元可使用"
                android:layout_marginTop="@dimen/space_10"
                android:layout_below="@+id/tv_my_coupon_name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_my_coupon_term_of_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_subtitle_color"
                android:textSize="@dimen/font_size_24px"
                android:text="2019.01.04-2019.05.05"
                android:layout_marginTop="@dimen/space_20"
                android:layout_below="@+id/tv_my_coupon_condition" />

            <TextView
                android:id="@+id/tv_my_check_get"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_100"
                android:text="@string/check_use_coupons"
                android:background="@drawable/shape_get_coupons_background"
                android:textColor="@color/app_main_default"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_toRightOf="@+id/tv_my_coupon_condition"
                android:textSize="@dimen/font_size_28px"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_my_coupon_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/app_main_default"
        android:textSize="@dimen/font_size_30px"/>
</RelativeLayout>


</android.support.v7.widget.CardView>