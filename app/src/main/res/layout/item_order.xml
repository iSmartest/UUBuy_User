<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_order_delete"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="删除"
                android:textColor="@color/text_green"
                android:textSize="14dp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_default"
            android:gravity="center|left"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_order_commodity_is_over"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="（活动结束）"
                android:textColor="@color/text_type_red"
                android:textSize="14dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp">
            <ImageView
                android:id="@+id/iv_order_commodity_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/loading_error"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_item_stype"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_order_commodity_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_main_color"
                    android:textSize="13dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="6dp" />
                <TextView
                    android:id="@+id/tv_commodity_num"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:textColor="@color/text_main_color"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tv_order_commodity_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_fraction_red"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <TextView
            android:id="@+id/tv_order_store_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/text_main_color"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:background="@color/app_main_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/app_main_default">
            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/text_subtitle_color"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/tv_order_again"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="再次下单"
                android:textColor="@color/text_green"
                android:textSize="15dp"
                android:background="@drawable/shape_order_background"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/order"
            android:background="@color/app_main_default"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
