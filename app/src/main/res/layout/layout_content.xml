<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activities_market"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_activities_circle_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:text="物美超市"
            android:textColor="@color/text_main_color"
            android:textSize="17dp" />

        <include layout="@layout/v_horizontal_line"/>

        <ImageView
            android:id="@+id/iv_activities_circle_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_error" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_is_over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:textColor="@color/app_main_default"
        android:text="活动已结束"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/translucent"/>
</RelativeLayout>