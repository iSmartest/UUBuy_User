<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">

    <LinearLayout
        android:id="@+id/ll_item_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:paddingTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        android:background="@color/app_main_default">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/space_240"
            android:layout_height="@dimen/space_160"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/iv_mall_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_launcher"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_140"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space_16">
            <TextView
                android:id="@+id/tv_mall_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/space_30"
                android:text="友谊燕莎"/>
            <TextView
                android:id="@+id/tv_mall_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_subtitle_color"
                android:textSize="@dimen/space_26"
                android:layout_marginTop="@dimen/space_16"
                android:text="朝阳区亮马桥52号"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>