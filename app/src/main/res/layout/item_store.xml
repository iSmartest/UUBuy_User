<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_store_commodity"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_store_commodity_picture"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/image_item_stype"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_error" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_store_commodity_picture"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_store_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_price_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_store_commodity_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_main_color"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动件数"
                    android:textColor="#ff000000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_store_commodity_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price_color"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_now_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_background_frame"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="立即预订"
            android:textColor="@color/text_green"
            android:textSize="11dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>